@{
 Layout = "_Layout";
}

@model Cellar.Models.Wine;
@using Cellar.Models;

<h2>Wine Details</h2>

<hr />

<h4>Wine: @Html.DisplayFor(model => model.Producer)</h4>
<h4>Origin: @Html.DisplayFor(model => model.Origin)</h4>
<h4>Vintage: @Html.DisplayFor(model => model.Vintage)</h4>
<h4>Price: @Html.DisplayFor(model => model.Price)</h4>
<h4>Location in Cellar: @Html.DisplayFor(model => model.Location)</h4>
<h4>Description: @Html.DisplayFor(model => model.Description)</h4>

<p>@Html.ActionLink("Update Wine", "Edit", new { id = Model.WineId })</p>
<p>@Html.ActionLink("Remove Wine", "Delete", new { id = Model.WineId })</p>
