@{
  Layout = "_Layout";
}

@using Cellar.Models;

<h2>Consumed Wines</h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>You haven't drank any Wines!</h3>
}


  @foreach(Wine wine in Model)
  {
   <p>@Html.ActionLink($"{wine.Producer} | {wine.Vintage}", "DetailsTwo", new { id = wine.WineId })</p>
   <p>Tasting Note: @wine.TastingNote</p>
   <p>Rating: @wine.Rating</p>
   <hr />
  }
